    <!--     HEADER-->
    <%- include('./partials/header') %>

     <section>
        <h2 class="text-center p-3 color-black fw-bold mt-3">AGREGAR PRODUCTO</h2>
        <div class=" mt-4 mb-3 container-md mx-auto col-9  p-4 card-body card">

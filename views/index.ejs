<!DOCTYPE html>
<html>
<!-- HEAD -->
<%- include('./partials/head') %>

  <body>
    <!--     HEADER-->
    <%- include('./partials/header') %>
    <section>
      <section>
        <div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active" data-bs-interval="10000">
              <img src="/images/banner1.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item" data-bs-interval="2000">
              <img src="/images/banner2.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
              <img src="/images/banner3.jpg" class="d-block w-100" alt="...">
            </div>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </section>
    </section>
      <section>
        <h1 class="text-center p-3 color-black fw-bold">BLA BLA CAR</h1>
        <h3 class="p-3 container color-black fw-bold">Autos Disponibles:</h3>

        <div class="p-3 container-md">
          <div class="row mx-auto gap-3">
            <% products.forEach(({id,name,description,price,model,image}) => { %>
             <div class="card mx-auto" style="width: 18rem;">
              <img src="/images/productsImage/<%= image %>" class="card-img-top mt-1" alt="imagen de <%= name %> ">
              <div class="card-body">
                <h5 class="card-title"><%= name %> </h5>
                <p class="card-text">Mod: <%= model %> </p>
                <h6 class="card-title text-success fs-4">$<%= toThousand(price) %> </h6>
                <p class="card-text card-text-description"><%= description %> </p>
               
                <a href="#" style="background-color: #212529;" class="btn btn-primary">MÃ¡s Info</a>
              </div>
            </div>
            <% }) %>
            
          </div>
        </div>

      </section>



      <!-- FOOTER -->
      <%- include('./partials/footer') %>
        <!-- SCRIPTS -->
        <%- include('./partials/scripts') %>

  </body>

</html>